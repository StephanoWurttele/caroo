<div id="home_page" >
  <div class="flex-container justify-content-center align-items-start" >
    <div class='card-home'>
      <div class='intro-text'>
        <h1 class="font-text">Search for luxury cars</h1>
      </div>
      <div class="search-choices">
        <div class="search-choices-background">
          <%= form_tag cars_url, method: :get, class:"search-form" do  %>
            <div class="search-choice-margins">
              <span class="search-choice-title">Brand</span>
              <div class="search-choice-bar">
                <%= text_field_tag :brand, nil, class: "search-input", placeholder: "Find brand.." %>
              </div>
            </div>
            <div class="search-choice-margins">
               <span class="search-choice-title">Type</span>
              <div class="search-choice-bar">
                <select id="kind" name="kind" class="search-input">
                  <option value="Any">Any</option>
                  <option value="Hybrid">Hybrid</option>
                  <option value="Electric">Electric</option>
                  <option value="Petrol">Petrol</option>
                  <option value="Diesel">Diesel</option>
                  <option value="Hybrid">Hybrid</option></select>
              </div>
            </div>
            <div class="search-choice-margins">
               <span class="search-choice-title">Transmission</span>
              <div class="search-choice-bar">
                <select id="transmission" name="transmission" class="search-input">
                  <option value="Any">Any</option>
                  <option value="Manual">Manual</option>
                  <option value="Automatic">Automatic</option></select>
              </div>
            </div>
            <div class="src-animate-center">
              <%= submit_tag "Search", class: "btn click-dark-home" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>









