<h1 class='text-center m-3'>Booking</h1>
<div class="card-center mb-3" style="max-width: 1080px;">
  <div class="row no-gutters">
    <div class="col-md-4 ">
     <%= cl_image_tag(@booking.car.photo.key, :width => 350, :height => 250, :crop => :fill) %>
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h3 class="card-title"><%= @booking.car.info %></h3>
        <p class="card-text">Owner: <strong><%= @car.owner %></strong></p>
        <p class="card-title">From: <%= @booking.initial_date.strftime("%B %d, %Y") %> to <%= @booking.final_date.strftime("%B %d, %Y") %></p>
        <p class="card-text"><small class="text-muted">Price: Â£<%= @booking.price %></small></p>
        <div class="d-flex justify-content-between">
          <%= link_to car_path(@booking.car), class:"white-text" do%>
            <button type="button" class='click-dark'>Car site</button>
          <% end %>
          <button type='button' class='btn-animate mb-3'><span><%=link_to "Return", bookings_path, class:"white-text"%> </span></button>
        </div>
      </div>
    </div>
  </div>  
</div>

<div class="card-center-map mb-3" style="max-width: 1080px;">
  <div class="no-gutters">
    <div class="text-center">
      <div class="card-body pb-1 bg-dark">
        <h2 class="card-title text-white"><%= @car.user.address %></h2>
      </div>
    </div>
    <div class="col-md-12">
      <div id="map"
      style="width: 100%;
      height: 300px;
      border-radius: 0 0 15px 15px"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
    </div>
  </div>
  
</div>
