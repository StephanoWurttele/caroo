
<div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= image_path "user_page_cover.jpg" %>)">
  Welcome, <%= current_user.name  %>
</div>

<div class="card-user">
  <div>
    <% if @user.photo.attached? %>
      <%= cl_image_tag current_user.photo.key, class: "avatar review-image" %>
    <% else %>
      <%= image_tag "pp.png", class: "avatar review-image"%>
    <% end %>
  </div>

  <div class="user-info">
    <div class="name">
      <h4><i class="fas fa-id-card"></i> <%= current_user.name %></h4>
    </div>
    <div class="username">
      <h4><i class="far fa-id-badge"></i> <%= current_user.username %></h4>
    </div>
    <div class="email">
      <h4><i class="fas fa-envelope"></i> <%= current_user.email %></h4>
    </div>
  </div>

  <div>
    <div class="button_cont" align="center"><%= link_to "Add a car for rent", new_car_path, class: "example_b" %></div>
    </br>
    <div class="button_cont" align="center"><%= link_to "Change your password", edit_user_registration_path, class: "example_b" %></div>
  </div>
</div>
