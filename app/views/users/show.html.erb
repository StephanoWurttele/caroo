
<div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= image_path "user_page_cover.jpg" %>)">
  Welcome, <%= current_user.name  %>
</div>

<div class="card-user">
  <div><%= cl_image_tag current_user.photo.key, width: 300, height: 300, crop: :fill %>
  </div>

  <div class="user-info">
    <p>Name: <%= current_user.name %></p>
    <p>Username: <%= current_user.username %> </p>
    <p>Email: <%= current_user.email %>  </p>
  </div>

  <div>
    <button class="btn-animate"><%= link_to "Change your password", edit_user_registration_path %></button>
    </br>
    <button class="btn-animate"><%= link_to "Log out", destroy_user_session_path, method: :delete %></button>
  </div>

</div>
