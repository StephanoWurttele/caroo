<div class="container">
  <div class="row d-flex justify-content-center py-4">
    <div class="col-md-8 pb-40 header-text">
      <h1 class="text-center pb-40"><%= @car.info %></h1>
    </div>
  </div>
<div class="card mb-3">
  <div class="row no-gutters">
      <div class="col-md-4">
        <%= cl_image_tag(@car.photo.key, height:300, width: 400, crop: :fill) %>
      </div>

      <div class="col col-md-8">
        <div class="card-body ml-5">
          <div class="card-title justify-content-between d-flex">
            <h4><%= @car.info %></h4>
            <h2><%= @car.price%>Â£ / day</h2>
          </div>
          <p class="card-text">Owner: <%= @car.user.name %></p>
          <p class="card-text">Desc: <%= @car.description %></p>
            <%= simple_form_for [@car, @booking] do |f| %>
            <div class="form-inputs col-md-4 offset-md-4">
              <%= f.input :initial_date, readonly: 'true', placeholder: 'Start Date'%>
              <%= f.input :final_date, readonly: 'true', placeholder: 'End Date' %>
              <%= f.button :submit, class: "btn-primary" %>
            <% end %>
            </div>
          </div>
      </div>
  </div>
</div>

  <div class="card bg-light mb-3">
    <div class="card-header">
      <p><strong>Reviews:</strong></p>
      <% if @can_review %>
      <p><%= link_to "Create a Review", new_car_review_path(@car) %><p>
      <% end %>
    </div>
    <% if user_signed_in? %>
      <% end %>
      <% @car.reviews.each do |review| %>
        <div class="review">
          <div class="card-text">
            <i class ="far fa-comments"></i> <%= review.content %>
          </div>
          <div class="review-stars">
            <% review.rating.times do %>
              <i class="fas fa-star yellow"></i>
            <% end %>
            <% (5 - review.rating).times do %>
              <i class="far fa-star yellow"></i>
            <% end %>
          </div>
          <% if (review.user == current_user) %>
            <i class="fas fa-pencil-alt"><%= link_to "Edit my review", edit_review_path(review) %></i>
            <br>
            <i class="fas fa-trash"><%= link_to "Delete my review", review_path(review), method: "delete" %></i>
          <% end %>
        </div>
    <% end %>
  </div>
</div>
