<h1 class="text-center"><%= @car.info %></h1>
<div class="container">
  <div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
      <h5><%= @car.info %></h5>
      <%= cl_image_tag(@car.photo.key, height:300, width: 400, crop: :fill) %>
      <p>Owner: <%= @car.user.name %></p>
      <p>Desc: <%= @car.description %></p>
      <p>Price: <%= @car.price %>Â£</p>
      <p class="btn btn-success"><%= link_to "Rent", new_car_booking_path(@car)%></p>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
      <strong>Reviews:</strong>
      <% if user_signed_in? %>
        <p><%= link_to "Create a Review", new_car_review_path(@car) %><p>
      <% end %>
      <% @car.reviews.each do |review| %>
        <div class="review-content">
          <i class ="fa fa-comment"></i> <%= review.content %>
        </div>
        <div class="review-stars">
          <% review.rating.times do %>
            <i class="fas fa-star"></i>
          <% end %>
        <% (5 - review.rating).times do %>
          <i class="far fa-star"></i>
        <% end %>
        </div>
        <% if (review.car.user == current_user) %>
        <i class="fas fa-pencil-alt"></i>
        <%= link_to "Edit my review", edit_review_path(review) %> - <%= link_to "Delete my review", review_path(review), method: "delete" %> 
        <i class="fas fa-trash"></i>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
